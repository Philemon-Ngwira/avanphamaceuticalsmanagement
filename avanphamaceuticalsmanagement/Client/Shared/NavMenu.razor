@using avanphamaceuticalsmanagement.Client.Pages.Dashboard;
@inject IndexBase index
<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>

    <AuthorizeView Roles="Employee">
        <Authorized>
            <MudNavGroup Title="Management" Icon="@Icons.Material.Filled.MedicalServices" Expanded="false">
                <MudNavLink Href="/DrugManagement" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Store">Stock Management</MudNavLink>
                <MudNavLink Href="/SalesTransactions" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.PointOfSale">Sales Transactions</MudNavLink>
            </MudNavGroup>
        </Authorized>

    </AuthorizeView>

    <AuthorizeView Roles="Admin">
        <Authorized>
            <MudNavLink Href="/Admin" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.AdminPanelSettings">Manage Users and Roles</MudNavLink>
            <MudBadge Content="RequestCount" Overlap="true" Color="Color.Primary">
                <MudNavLink Href="/RequestsForApproval" Match="NavLinkMatch.Prefix" ForceLoad="true" Icon="@Icons.Material.Filled.Approval">Requests For Approval</MudNavLink>
            </MudBadge>
            <MudNavLink Href="/Budgets" Match="NavLinkMatch.Prefix" Icon="fa-solid fa-piggy-bank">Budgets</MudNavLink>
         
        </Authorized>
    </AuthorizeView>

    @*    <MudNavLink Href="/about"  Match="NavLinkMatch.Prefix">About</MudNavLink>*@
</MudNavMenu>

@code {
    private int RequestCount => index.numberofRequests;
}