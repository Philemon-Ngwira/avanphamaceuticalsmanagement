@using Microsoft.AspNetCore.Identity;
@using avanphamaceuticalsmanagement.Client.Shared.Theme;
@using avanphamaceuticalsmanagement.Shared.IdentityModel;
@inherits LayoutComponentBase

<MudThemeProvider Theme="theme" IsDarkMode="isDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Fixed="true" Elevation="2" >
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudImage Alt="Logo" Src="/images/AvanPharmacyWhite.png" Width="100" Height="100"></MudImage>
        Avan Pharmaceuticals
        <MudSpacer />
        <MudSwitch @bind-Checked="@isDarkMode" ThumbIcon="@(isDarkMode==true ? Icons.Material.Outlined.DarkMode : Icons.Material.Outlined.LightMode)" ThumbIconColor="@(isDarkMode==true ? Color.Dark : Color.Primary)">Theme</MudSwitch>
        <LoginDisplay />
       
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen"  ClipMode="DrawerClipMode.Docked" Variant="DrawerVariant.Mini" >
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
@code {
    public AvanPharmacyTheme theme = new();
    bool _drawerOpen = true;
    bool isDarkMode;
    public string profilePicture;
    
   
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    

}